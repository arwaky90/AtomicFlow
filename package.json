{
  "name": "atomic-flow",
  "displayName": "Atomic Flow",
  "description": "Atomic Flow - The Future of Coding. Move beyond text editors with a powerful Node-based Visual Interface for your architecture.",
  "version": "0.1.0",
  "publisher": "rakaarwaky",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/rakaarwaky/AtomicFlow"
  },
  "homepage": "https://github.com/rakaarwaky/AtomicFlow#readme",
  "bugs": {
    "url": "https://github.com/rakaarwaky/AtomicFlow/issues"
  },
  "icon": "media/icon.png",
  "funding": {
    "type": "individual",
    "url": "https://buymeacoffee.com/rakaarwaky"
  },
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Visualization"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:rust"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "panel": [
        {
          "id": "atomic-flow-panel",
          "title": "Atomic Flow",
          "icon": "$(type-hierarchy-sub)"
        }
      ]
    },
    "views": {
      "atomic-flow-panel": [
        {
          "type": "webview",
          "id": "atomic-flow.graphView",
          "name": "Atomic Flow Graph"
        }
      ]
    },
    "commands": [
      {
        "command": "atomic-flow.refresh",
        "title": "Refresh Graph",
        "category": "Atomic Flow"
      }
    ]
  },
  "scripts": {
    "compile": "tsc -p ./",
    "package": "vsce package --allow-missing-repository",
    "mcp": "node out/mcpServer.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.96.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.0.0"
  }
}
